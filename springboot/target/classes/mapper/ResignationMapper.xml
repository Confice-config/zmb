<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.ResignationMapper">

    <select id="selectPage" resultType="com.example.enetity.Resignation">
        SELECT * FROM resignation
        <where>
            <!-- 员工ID：数字时精确匹配 -->
            <if test="employeeId != null and employeeId != ''">
                AND employee_id = #{employeeId}
            </if>

            <!-- 离职类型：枚举值模糊匹配（输入"辞"匹配"辞退"） -->
            <if test="resignationType != null and resignationType != ''">
                AND resignation_type LIKE CONCAT('%', #{resignationType}, '%')
            </if>

            <!-- 状态：枚举值模糊匹配（输入"批"匹配"待审批"） -->
            <if test="status != null and status != ''">
                AND status LIKE CONCAT('%', #{status}, '%')
            </if>
        </where>
        ORDER BY id DESC  <!-- 按最新记录排序 -->
    </select>

</mapper>